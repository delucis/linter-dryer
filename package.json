{
  "name": "linter-dryer",
  "description": "Highlight repetition in Atom to help you stay DRY",
  "version": "0.4.0",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delucis/linter-dryer.git"
  },
  "main": "./lib/linter-dryer",
  "directories": {
    "lib": "lib"
  },
  "keywords": [
    "lint",
    "repetition",
    "DRY",
    "copy-paste",
    "cpd",
    "copy paste detection"
  ],
  "engines": {
    "atom": ">=1.14.0 <2.0.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^10.0.0",
    "atom-package-deps": "^4.6.2",
    "ignore-walk": "^3.0.1",
    "jscpd": "^2.0.11"
  },
  "package-deps": [
    "linter"
  ],
  "scripts": {
    "prerelease": "npm t",
    "release": "standard-version -s",
    "postrelease": "git push --follow-tags",
    "test": "standard"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "standard": "^12.0.1",
    "standard-version": "^4.4.0"
  },
  "bugs": "https://github.com/delucis/linter-dryer/issues",
  "homepage": "https://github.com/delucis/linter-dryer#readme",
  "author": "Chris Swithinbank <swithinbank@gmail.com> (http://chrisswithinbank.net/)",
  "standard": {
    "globals": [
      "atom"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
